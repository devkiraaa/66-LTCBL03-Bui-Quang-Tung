#include <stdio.h>

int main(){
      int n;
      scanf("%d", &n);
      int a[n];
      for(int i = 0; i < n; i++){
            scanf("%d", &a[i]);
      }
      int max = a[0];
      int stt ;
      for(int i = 0; i < n; i++){
            if(a[i] > max){
                  max = a[i];
                  stt = i;
            }
      }
      printf("Gia tri lon nhat la %d vi tri %d\n", max, stt);
      int min = a[0];
      int stt1;
      for(int i = 0; i < n; i++){
            if(a[i] < min){
                  min = a[i];
                  stt1 = i;
            }
      }
      printf("Gia tri nho nhat la %d vi tri %d", min, stt1);
}
